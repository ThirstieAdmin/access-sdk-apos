{
  "name": "thirstie-access-apostrophecms",
  "version": "1.0.0",
  "description": "ApostropheCMS Essential Starter Kit Site",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "start": "npm run dev",
    "dev": "dotenv -e .env -- nodemon",
    "dev:admin": "APOS_DEV=1 npm run dev",
    "local": "dotenv -e .env -- node app",
    "build": "NODE_ENV=production node app @apostrophecms/asset:build",
    "serve": "NODE_ENV=production node app",
    "release": "npm run build && node app @apostrophecms/migration:migrate",
    "release:env": "npm install &&  dotenv -e .env -- npm run release", 
    "serve:env": "dotenv -e .env -- npm run serve",
    "release:www": "dotenv -e /var/www/.env.access -- npm run release",
    "serve:www": "dotenv -e /var/www/.env.access -- npm run serve"
  },
  "nodemonConfig": {
    "delay": 1000,
    "verbose": true,
    "watch": [
      "./app.js",
      "./modules/**/*",
      "./lib/**/*.js",
      "./views/**/*.html"
    ],
    "ignoreRoot": [
      ".git"
    ],
    "ignore": [
      "**/ui/",
      "locales/*.json",
      "public/uploads/",
      "public/apos-frontend/*.js",
      "data/"
    ],
    "ext": "json, js, cjs, html"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ThirstieAdmin/access-sdk-apos"
  },
  "author": "Thirstie, Inc.",
  "license": "MIT",
  "dependencies": {
    "@apostrophecms/favicon": "^1.1.3",
    "@apostrophecms/seo": "^1.3.0",
    "@apostrophecms/sitemap": "^1.1.0",
    "@apostrophecms/vite": "^1.0.0",
    "@thirstie/ecomm-vue": "^1.4.1",
    "apostrophe": "^4.22.0",
    "normalize.css": "^8.0.1"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8.0.0",
    "eslint-config-apostrophe": "^4.0.0",
    "nodemon": "^3.0.1"
  }
}
